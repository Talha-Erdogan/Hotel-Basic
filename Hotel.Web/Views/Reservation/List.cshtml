@using Hotel.Business.Common
@using Hotel.Business.Enums
@using Hotel.Web.Controllers

@model List<Hotel.Business.Models.Reservation.RoomListWithDetail>

@{
    ViewData["Title"] = "Auth List";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <i class="fa fa-align-justify"></i> Room - Reservation List
            </div>
            <div class="card-body">

                <div class="row text-center center-block d-flex ">

                    @foreach (var item in Model)
                    {
                        @if (item.IsEmpty)
                        {

                            <div class="col-md-3 text-center align-center  d-flex justify-content-center align-items-center" style="background-color:green; height:130px; border:solid 10px white;" onclick="location.href ='@Url.Action("Add", "Reservation", new { roomId =@item.RoomId })'">
                                <b style="color:white;"> @item.RoomName</b>
                            </div>

                        }
                        else
                        {

                            <div class="col-md-3 text-center align-center  d-flex justify-content-center align-items-center" style="background-color:red; height:130px; border:solid 10px white; " onclick="location.href ='@Url.Action("Edit", "Reservation", new { roomId =@item.RoomId })'">
                                <b style="color:white;">  @item.RoomName</b>
                            </div>

                        }
                    }


                </div>


                @if (ViewBag.ErrorMessage != null && !string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <div class="text-danger">
                        @ViewBag.ErrorMessage
                    </div>
                }
                @if (ViewBag.ErrorMessageList != null)
                {
                    <div class="text-danger">
                        @foreach (var item in ViewBag.ErrorMessageList)
                        {
                            <span>@item</span>
                            <br />
                        }
                    </div>
                }

            </div>
        </div>
    </div>
    <!-- /.col-->
</div>
