@using Hotel.Business.Common
@using Hotel.Web.Controllers

@model Hotel.Web.Models.Reservation.AddViewModel

@{
    ViewData["Title"] = "Reservation Add";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <strong>Reservation Add</strong>
            </div>
            <div class="card-body">

                @using (Html.BeginForm("Add", "Reservation", FormMethod.Post, new { @class = "form-horizontal input-sm" }))
                {
                    @Html.HiddenFor(m => m.RoomId);


                    @*<div class="form-group row">
                <label class="col-md-2 col-form-label">Code</label>
                <div class="col-md-9">
                    @Html.TextBoxFor(m => m.Code, new { @class = "form-control input-sm" })
                    @Html.ValidationMessageFor(m => m.Code, null, new { @class = "help-block text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-2 col-form-label">Name</label>
                <div class="col-md-9">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control input-sm" })
                    @Html.ValidationMessageFor(m => m.Name, null, new { @class = "help-block text-danger" })
                </div>
            </div>*@

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Customer</label>
                        <div class="col-md-9">
                            @Html.DropDownListFor(m => m.CustomerId, Model.CustomerSelectList, "Select", new { @class = "form-control form-control-sm", @id = "cbCustomer" })
                            @Html.ValidationMessageFor(m => m.CustomerId, null, new { @class = "help-block text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-12">
                            <button class="btn btn-sm btn-primary" type="submit" id="btnSubmit">
                                <i class="fa fa-dot-circle-o"></i> ENTRY
                            </button>
                            &nbsp;
                            <a class="btn btn-sm btn-danger" href="~/Reservation/List">
                                <i class="fa fa-ban"></i> Cancel
                            </a>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">

                            @if (ViewBag.ErrorMessage != null && !string.IsNullOrEmpty(ViewBag.ErrorMessage))
                            {
                                <div class="text-danger">
                                    @ViewBag.ErrorMessage
                                </div>
                            }
                            @if (ViewBag.ErrorMessageList != null)
                            {
                                <div class="text-danger">
                                    @foreach (var item in ViewBag.ErrorMessageList)
                                    {
                                        <span>@item</span>
                                        <br />
                                    }
                                </div>
                            }

                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- /.col-->
</div>


